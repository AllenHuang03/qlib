# ================================
# QLIB PRO - ENVIRONMENT VARIABLES TEMPLATE
# Copy this to .env and fill in your values
# ================================

# Core Configuration
NODE_ENV=development
DEBUG=true
PORT=8000

# Supabase Database Configuration (REQUIRED)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_KEY=your-supabase-service-key-here
SUPABASE_JWT_SECRET=your-supabase-jwt-secret-here
DATABASE_URL=postgresql://postgres:your-password@db.your-project.supabase.co:5432/postgres

# Market Data APIs (REQUIRED)
ALPHA_VANTAGE_KEY=your-alpha-vantage-api-key
NEWS_API_KEY=your-news-api-key

# Optional Australian Market APIs
ASX_API_KEY=your-asx-api-key-if-available
YAHOO_FINANCE_KEY=your-yahoo-finance-key-if-available

# Authentication & Security
JWT_SECRET_KEY=your-super-secret-jwt-key-here
CORS_ORIGINS=http://localhost:3000,https://your-app.netlify.app

# Two-Factor Authentication (Optional)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+61xxxxxxxxx
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@your-domain.com

# Application Settings
ENVIRONMENT=development
PYTHONPATH=/app
TZ=Australia/Sydney

# Feature Flags
ENABLE_2FA=false
ENABLE_PAPER_TRADING=true
ENABLE_LIVE_TRADING=false
ENABLE_REAL_TIME_DATA=true
ENABLE_SUPABASE=true

# Cache & Performance
CACHE_DURATION_MINUTES=5
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MINUTES=1

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json